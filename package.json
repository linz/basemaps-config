{
  "name": "basemaps-config",
  "version": "1.0.1",
  "private": true,
  "description": "LINZ specific configuration and deployment of basemaps",
  "repository": "github:linz/basemaps-config",
  "type": "module",
  "license": "MIT",
  "main": "./build/src/index.js",
  "bin": {
    "bmc": "./bin/bmc.js"
  },
  "dependencies": {
    "@basemaps/cli": "^6.14.0",
    "@basemaps/config": "^6.21.1",
    "@basemaps/geo": "^6.10.0",
    "@basemaps/shared": "^6.12.0",
    "@chunkd/fs": "^8.1.0",
    "@cogeotiff/chunk": "^4.2.0",
    "@linzjs/docker-command": "^6.10.0",
    "@mapbox/spritezero": "^8.0.0",
    "@oclif/core": "^1.5.3",
    "deep-diff": "^1.0.2",
    "p-limit": "^4.0.0",
    "pretty-json-log": "^1.0.0",
    "yarn": "^1.22.17",
    "zod": "^3.8.2"
  },
  "scripts": {
    "lint": "eslint . --quiet --fix --report-unused-disable-directives --ignore-path .gitignore",
    "clean": "tsc -b --clean && rimraf 'build'",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "build": "tsc --build tsconfig.json",
